<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>phoenix</groupId>
        <artifactId>phoenix-bundle</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <artifactId>phoenix-user-controller</artifactId>

    <name>phoenix-user-controller</name>
    <description>phoenix-user-controller</description>

    <properties>
        <user-api-yaml.file>${project.basedir}/src/main/resources/api/user.yaml</user-api-yaml.file>
        <signup-api-yaml.file>${project.basedir}/src/main/resources/api/signup.yaml</signup-api-yaml.file>
        <generated-sources-path>${project.build.directory}/generated-sources</generated-sources-path>
        <springfox.version>2.6.1</springfox.version>
        <swagger-codegen.version>2.3.1</swagger-codegen.version>
        <commons-lang3.version>3.8.1</commons-lang3.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.springfox</groupId>
            <artifactId>springfox-swagger-ui</artifactId>
            <version>${springfox.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.springfox</groupId>
            <artifactId>springfox-swagger2</artifactId>
            <version>${springfox.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>${commons-lang3.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>phoenix-user-service</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>io.swagger</groupId>
                <artifactId>swagger-codegen-maven-plugin</artifactId>
                <version>${swagger-codegen.version}</version>
                <executions>
                    <execution>
                        <id>generate-user-api</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${user-api-yaml.file}</inputSpec>
                            <language>spring</language>
                            <apiPackage>phoenix.user.controller.api</apiPackage>
                            <output>${generated-sources-path}</output>
                            <generateSupportingFiles>false</generateSupportingFiles>
                            <importMappings>
                                <importMapping>User=phoenix.user.dto.User</importMapping>
                            </importMappings>
                            <configOptions>
                                <java8>true</java8>
                                <interfaceOnly>true</interfaceOnly>
                            </configOptions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-signup-api</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${signup-api-yaml.file}</inputSpec>
                            <language>spring</language>
                            <apiPackage>phoenix.signup.controller.api</apiPackage>
                            <output>${generated-sources-path}</output>
                            <generateSupportingFiles>false</generateSupportingFiles>
                            <importMappings>
                                <importMapping>User=phoenix.user.dto.User</importMapping>
                                <importMapping>UserAlreadyExist=phoenix.user.exception.UsernameAlreadyExistException</importMapping>
                            </importMappings>
                            <configOptions>
                                <java8>true</java8>
                                <interfaceOnly>true</interfaceOnly>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>